<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="com.example.tomapter.findyourpub.MainActivity"
    android:weightSum="1">


    <ImageView
        android:layout_width="278dp"
        android:layout_height="152dp"
        android:contentDescription="Biere"
        app:srcCompat="@drawable/beer_yellow"
        android:layout_marginTop="17dp"
        android:id="@+id/imageView"
        android:layout_weight="0.39" />

    <TextView
        android:text="Where do you live?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topbar"
        android:textSize="50sp"
        android:layout_marginBottom="117dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cities"
        android:layout_marginBottom="50dp"/>



    <Button
        android:text="Find Me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/find_me"
        android:onClick="onClick"/>

    <Button
        android:text="Find My Pub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/go"
        android:onClick="onClick"/>


</LinearLayout>
